double a = 0;
int b = 0;
scanf("%lf", &a);//获取一个浮点数
b = (int)a;
if (a >= 0)
{
	if (a - b <= 0.4)
	     printf("%d\n", b);
    else
	     printf("%d\n",(int)a+1); //当a为正数时强制将浮点数转换为整形并四舍五入	
}
else
{
	if (a - b <= -0.4)
		printf("%d\n", (int)a - 1);
	else
		printf("%d\n", b);//当a为负数时强制将浮点数转换为整形并四舍五入	
}
return 0;





